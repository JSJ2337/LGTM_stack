# LGTM Stack ECS Fargate - Terraform Variables Example
# Copy this file to terraform.tfvars and fill in your values

aws_region     = "ap-northeast-2"
environment    = "prod"
vpc_name       = "main-vpc"
s3_bucket_name = "sys-lgtm-s3"

# ACM Certificate ARN for HTTPS
certificate_arn = "arn:aws:acm:ap-northeast-2:123456789012:certificate/xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"

# Domain name for Grafana
domain_name = "grafana.example.com"

# CloudMap namespace
cloudmap_namespace = "lgtm.local"


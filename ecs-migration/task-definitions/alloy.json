{
  "family": "lgtm-alloy",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/lgtm-prod-task-execution-role",
  "taskRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/lgtm-prod-alloy-task-role",
  "containerDefinitions": [
    {
      "name": "alloy",
      "image": "${AWS_ACCOUNT_ID}.dkr.ecr.ap-northeast-2.amazonaws.com/lgtm-alloy:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 12345,
          "protocol": "tcp",
          "name": "http"
        },
        {
          "containerPort": 9080,
          "protocol": "tcp",
          "name": "metrics"
        }
      ],
      "environment": [
        {
          "name": "LOKI_URL",
          "value": "http://loki.lgtm.local:3100/loki/api/v1/push"
        },
        {
          "name": "LOKI_TENANT",
          "value": "ftt-cloudflare"
        },
        {
          "name": "MIMIR_URL",
          "value": "http://mimir.lgtm.local:8080/api/v1/push"
        },
        {
          "name": "MIMIR_TENANT",
          "value": "ftt-lgtm-rds"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/lgtm-alloy",
          "awslogs-region": "ap-northeast-2",
          "awslogs-stream-prefix": "alloy"
        }
      },
      "stopTimeout": 30
    }
  ],
  "tags": [
    {
      "key": "app",
      "value": "lgtm-alloy"
    },
    {
      "key": "component",
      "value": "collector"
    },
    {
      "key": "environment",
      "value": "production"
    }
  ]
}

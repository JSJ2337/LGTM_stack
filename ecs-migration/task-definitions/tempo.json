{
  "family": "lgtm-tempo",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/lgtm-prod-task-execution-role",
  "taskRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/lgtm-prod-task-role",
  "containerDefinitions": [
    {
      "name": "tempo",
      "image": "${AWS_ACCOUNT_ID}.dkr.ecr.ap-northeast-2.amazonaws.com/lgtm-tempo:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3200,
          "protocol": "tcp",
          "name": "http"
        },
        {
          "containerPort": 4317,
          "protocol": "tcp",
          "name": "otlp-grpc"
        },
        {
          "containerPort": 4318,
          "protocol": "tcp",
          "name": "otlp-http"
        }
      ],
      "environment": [
        {
          "name": "AWS_REGION",
          "value": "ap-northeast-2"
        },
        {
          "name": "TEMPO_S3_BUCKET",
          "value": "jsj-lgtm-data-s3"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/lgtm-tempo",
          "awslogs-region": "ap-northeast-2",
          "awslogs-stream-prefix": "tempo"
        }
      },
      "stopTimeout": 120
    }
  ],
  "tags": [
    {
      "key": "app",
      "value": "lgtm-tempo"
    },
    {
      "key": "component",
      "value": "traces-storage"
    },
    {
      "key": "environment",
      "value": "production"
    }
  ]
}
